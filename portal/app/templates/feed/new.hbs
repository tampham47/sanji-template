<h4 class="header">New Hook</h4>
<form class="form-horizontal">
  <fieldset>
  <!-- Textarea -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="input-status">What on your minds?</label>
    <div class="col-md-6">
      <textarea class="form-control" id="input-status" name="input-status"></textarea>
    </div>
  </div>

  <!-- Text input-->
  <div class="form-group">
    <label class="col-md-4 control-label" for="input-place">Place</label>
    <div class="col-md-6">
    <input id="input-place" name="input-place" type="text" placeholder="" class="form-control input-md">

    </div>
  </div>

  <!-- Button (Double) -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="btn-publish"></label>
    <div class="col-md-8 pull-right">
      {{link-to 'Cancel' 'feed' class="btn btn-default"}}
      <button id="btn-publish" name="btn-publish"
        class="btn btn-success">Want a Hook</button>
    </div>
  </div>
  </fieldset>
</form>

<br/><br/>
<h5>(*) You can post a hook with nothing to say.</h5>

{{outlet}}
